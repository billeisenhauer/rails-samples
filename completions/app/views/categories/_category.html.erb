<tr id="category-<%= category.id %>" class="<%= cycle("odd", "even") %>">
  <td class="cb column-cb">
    <% if category.allows_bulk_actions? -%>
      <%= check_box_tag "category_ids[]", category.id, false, :class => 'toggle-target', :id => "category_ids_#{category.id}" %>
    <% end -%>
  </td>
	<td class="category-name column-category-name">
	  <%= link_to(category.ancestry_names, category_path(category)) %>
	  <div class="row-actions">
      <span class="edit"><%= link_to 'Edit', edit_category_path(category) %> |</span>
      <% if category.can_destroy? -%> 
        <span class="delete"><%= link_to("Delete", { :action => "destroy", :id => category },
          :confirm => "Are you sure you want to delete this category?",
          :method => :delete) %> |</span>
      <% end -%>
      <span class="view"><%= link_to 'View', category_path(category) %></span>
    </div>
	</td>
</tr>