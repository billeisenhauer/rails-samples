<% semantic_form_for @site do |f| %>
  <%= f.error_messages %>
  <% f.inputs do %>
    <%= f.input :name %>
    <% if can_edit_parent?(@site) -%>
      <%= f.label :parent, :required => false %>
      <%= f.input :parent_id, :as => :select, :collection => possible_parent_sites_for(@site),
                  :label_method => 'ancestry_names',
                  :prompt => 'No parent', :label => false %>
    <% end -%>
  <% end %>
  <% f.inputs do %>
    <%= f.commit_button "#{button}" %>
  <% end %>
<% end %>