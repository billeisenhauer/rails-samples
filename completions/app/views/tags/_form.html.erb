<% semantic_form_for @tag do |f| %>
  <%= f.error_messages %>
  <% f.inputs do %>
    <%= f.label :site, :required => true %>
    <%= f.input :site, :collection => current_user.visible_sites, :label => false, 
                       :label_method => 'ancestry_names',
                       :include_blank => false %>
    <%= f.input :tag_number %>
  <% end %>
  <% f.inputs do %>
    <%= f.commit_button "#{button}" %>
  <% end %>
<% end %>