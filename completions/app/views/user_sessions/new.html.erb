<%- @page_title = 'Sign In' -%>

<h1>Please sign in</h1>
<% semantic_form_for :user_session, :url => user_sessions_path do |form| %>
  <% form.inputs do %>
    <%= form.input :username, :hint => 'Use your Schlumberger network username' %>
    <%= form.input :password, :as => :password, :hint => 'Use your Schlumberger network password' %>
    <%= form.commit_button "Sign In" %>
  <% end %>
<% end %>
