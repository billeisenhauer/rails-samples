<% semantic_form_for @tag_reader do |f| %>
  <%= f.error_messages %>
  <% f.inputs do %>
    <%= f.label :site, :required => true %>
    <%= f.input :site, :collection => current_user.visible_sites, :label => false, 
                       :label_method => 'ancestry_names',
                       :include_blank => false %>
    <%= f.input :reader %>
    <%= f.input :address, :required => false %>
    <%#= f.input :latitude, :required => false %>
    <%#= f.input :longitude, :required => false %>
  <% end %>
  <% f.inputs do %>
    <%= f.commit_button "#{button}" %>
  <% end %>
<% end %>