<% if @inventory_assets.any? -%>
  <%= render :partial => 'filters' %>
  <%= render :partial => 'search' %>
<% end -%>
<% form_tag(bulk_inventory_assets_path, :method => :put, :style => 'clear:both;') do %>
  <%= render :partial => 'bulk_actions' %>
  <%= will_paginate @inventory_assets, :inner_window => 1 %>
