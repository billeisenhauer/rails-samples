            <th class="column-days-lead-time" scope="col"><%= sortable_heading('Lead Time<br/>Days', 'days_lead_time', parameterized_link) %></th>
            <th class="column-expected-delivery-on" scope="col"><%= sortable_heading('Expected<br/>Delivery Date', 'expected_delivery_on', parameterized_link) %><%= '&nbsp;' * 10 %></th>
            <th class="column-category" scope="col"><%= sortable_heading('Category', 'category', parameterized_link) %></th>
            <th class="column-part" scope="col"><%= sortable_heading('Part #', 'part_number', parameterized_link) %></th>
            <th class="column-description" scope="col"><%= sortable_heading('Description', 'description', parameterized_link) %><%= '&nbsp;' * 15 %></th>
            <th class="column-quantity-ordered" scope="col"><%= sortable_heading('Qty Ordered', 'quantity_ordered', parameterized_link) %></th>
            <th class="column-quantity-received" scope="col"><%= sortable_heading('Qty Received', 'quantity_received', parameterized_link) %></th>
            <th class="column-quantity-installed" scope="col"><%= sortable_heading('Qty Installed', 'quantity_installed', parameterized_link) %></th>
            <th class="column-quantity-on-location" scope="col"><%= sortable_heading('Qty on<br/>Location', 'quantity_on_location', parameterized_link) %></th>
            <th class="column-measurement-unit" scope="col"><%= sortable_heading('Measurement<br/>Unit', 'measurement_unit', parameterized_link) %></th>
