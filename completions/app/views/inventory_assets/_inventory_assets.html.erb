      <table id="inventory_assets" class="widefat scrollable" cellspacing="0" >
      	<thead>
       		<tr>
       		  <th class="column-cb check-column bulk-action-col" scope="col">
       		    <%= check_box_tag "inventory-asset-bulk-actions", '1', false, :class => 'toggle' %>
       		  </th>
       		  <th class="column-actions" scope="col">&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;Actions&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;</th>
       		  <th class="column-status" scope="col"><%= sortable_heading('Code', 'state', parameterized_link) %></th>
            <th class="column-pe" scope="col"><%= sortable_heading('PE', 'pe', parameterized_link) %></th>
            <th class="column-client" scope="col"><%= sortable_heading('Client', 'client_name', parameterized_link) %></th>
            <th class="column-project" scope="col"><%= sortable_heading('Project', 'project', parameterized_link) %></th>
