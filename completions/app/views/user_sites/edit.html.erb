<h1>Change Site</h1>
<% if current_user.can_change_sites? -%>
  <% semantic_form_for current_user, :url => user_sites_path, :method => :put do |f| %>
    <%= f.error_messages %>
    <% f.inputs do %>
      <%= f.input :site, :collection => current_user.visible_sites, :label_method => 'ancestry_names', :prompt => false %>
    <% end %>
    <% f.inputs do %>
      <%= f.commit_button "Change Site" %>
    <% end %>
  <% end %>
<% else %>
  <p>You can only change sites if you are a member of two or more sites.</p>
<% end %>